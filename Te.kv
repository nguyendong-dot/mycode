<Ui>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        background_color:1,1,1,0.5
        spacing: 60

        BoxLayout
            orientation:'vertical'
            size_hint: (1,0.4)
            spacing: 5

            Label:
                background_color:0,0,0,0
                text: ''
                font_name:'Roboto'
                halign: 'right'
                font_size: 40
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:                                  # hang tren
                id: solve
                background_color:0,0,0,0
                text: ''
                font_name:'Roboto'
                halign: 'right'
                font_size: 40
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:                                  #hang duoi
                id: num
                background_color:0,0,0,0
                text: ''
                font_name:'Roboto'
                halign: 'right'
                font_size: 40
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
        GridLayout:
            rows: 5
            cols: 4
            padding: 5
            spacing: 5
            Button:
                text: "%"
            Button:
                text: "CE"
            Button:
                text: "C"
                on_press: root.clear()
            Button:
                text: "<--"
                on_press: root.delStr()
            Button:
                text: "7"
                on_press: root.addNum('7')
            Button:
                text: "8"
                on_press: root.addNum('8')
            Button:
                text: "9"
                on_press: root.addNum('9')
            Button:
                text: "x"
                on_press: root.status('x')

            Button:
                text: "4"
                on_press: root.addNum('4')
            Button:
                text: "5"
                on_press: root.addNum('5')
            Button:
                text: "6"
                on_press: root.addNum('6')
            Button:
                text: "-"
                on_press: root.status('-')
            Button:
                text: "1"
                on_press: root.addNum('1')
            Button:
                text: "2"
                on_press: root.addNum('2')
            Button:
                text: "3"
                on_press: root.addNum('3')
            Button:
                text: "+"
                on_press: root.status('+')

            Button:
                text: "+-"

            Button:
                text: "0"
                on_press: root.addNum('0')
            Button:
                text: "."
            Button:
                text: "="
                on_press: root.solve()

<Button>:
    text: ""
    font_size:30
    background_color:0,0,0,0 # Bỏ màu nền
    background_normal:''
    background_down:''
    color: 0,0,0,1
    canvas.before:
        Color:
            rgba: (1, 0.5, 1, 0.8) if self.state == 'normal' else (1, 1, 1, 0.1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]